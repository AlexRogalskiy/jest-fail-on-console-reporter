{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [],
    "module": "commonjs",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6"
  },
  "include": ["./package.json", "./src/**/*.ts"],
  "exclude": ["./src/**/*.spec.ts"]
}
